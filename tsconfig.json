{
  "compilerOptions": {
    // Basic options
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,

    // JSX/React configuration
    "jsx": "react-jsx",
    
    // Module resolution
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // Strictness and code quality
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // Alias to resolve imports starting with @/
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/**/*.tsx", "src/**/*.ts"]
}